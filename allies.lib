members_allies() {
 cd $TMP
 echo "" >>allies.txt
 clan_id

 if [ -n "$CLD" ]; then
  printf "${BLACK_CYAN}\n$(G_T "Updating clan members into allies")${COLOR_RESET}\n\\n"

  for num in `seq 5 -1 1`; do
   printf "${PURPLEis_BLACK}/clan/${CLD}/${num}${COLOR_RESET}\n"

   (
    w3m -cookie -o http_proxy=$PROXY -o accept_encoding=UTF-8 -debug -dump_source "${URL}/clan/${CLD}/${num}" -o user_agent="$(sed -n "${random_agent}p" $TMP/userAgent.txt)" | grep -o -E "[/]>([[:upper:]][[:lower:]]{0,15}[[:space:]]{0,1}[[:upper:]]{0,1}[[:lower:]]{0,14},[[:space:]])<s" | awk -F"[>]" '{print $2}' | awk -F"[,]" '{print $1}' | sed 's,\ ,_,' >>allies.txt
   ) </dev/null &>/dev/null &
   time_exit 17

  done

  sort -u allies.txt -o allies.txt
 fi

 printf "${BLACK_CYAN}\n$(G_T "Allies for Coliseum and King of the Immortals"):\n${COLOR_RESET}\n"
 printf "${GOLD_BLACK}\n`< allies.txt`\n${COLOR_RESET}"
 printf "${BLACK_CYAN}$(G_T "Wait to continue.")  üëà${COLOR_RESET}\n"
 sleep 5
}

id_allies() {
 printf "${BLACK_CYAN}$(G_T "Looking for allies on friends list")${COLOR_RESET}\n"
 cd $TMP
 printf "${PURPLEis_BLACK}/mail/friends${COLOR_RESET}\n"

 (
  w3m -cookie -o http_proxy=$PROXY -o accept_encoding=UTF-8 -debug -dump_source "${URL}/mail/friends" -o user_agent="$(sed -n "${random_agent}p" $TMP/userAgent.txt)" >$TMP/SRC
 ) </dev/null &>/dev/null &
 time_exit 17

#  NPG=$(c_at $TMP/SRC | sed 's/href=/\n/g' | grep "/mail/friends/[0-9]'>&#62;&#62;" | cut -d\' -f2 | cut -d\/ -f4)
  NPG=$(grep -o -E '/mail/friends/([[:digit:]]{0,4})[^[:alnum:]]{4}62[^[:alnum:]]{3}62[^[:alnum:]]' < $TMP/SRC | sed 's/\/mail\/friends\/\([[:digit:]]\{0,4\}\).*/\1/')
#  NPG=$(cat $TMP/SRC | grep -o -E '/mail/friends/([[:digit:]]{0,4})[^[:alnum:]]{4}62[^[:alnum:]]{3}62[^[:alnum:]]' | sed 's/\/mail\/friends\/\([[:digit:]]\{0,4\}\).*/\1/')

  >tmp.txt

  if [ -z "$NPG" ]; then
   printf "${PURPLEis_BLACK}/mail/friends${COLOR_RESET}\n"

   (
    w3m -cookie -o http_proxy=$PROXY -o accept_encoding=UTF-8 -debug -dump_source "${URL}/mail/friends" -o user_agent="$(sed -n "${random_agent}p" $TMP/userAgent.txt)" | sed 's,/user/,\n/user/,g' |  grep '/user/' | grep '/mail/' | cut -d\< -f1 >>tmp.txt
   ) </dev/null &>/dev/null &
   time_exit 17

  else
   for num in `seq "$NPG" -1 1`; do
    printf "${BLACK_CYAN}$(G_T "Friends list page") ${num}\033[00m\n${PURPLEis_BLACK}/mail/friends/${num}${COLOR_RESET}\n"

    (
     w3m -cookie -o http_proxy=$PROXY -o accept_encoding=UTF-8 -debug -dump_source "${URL}/mail/friends/${num}" -o user_agent="$(sed -n "${random_agent}p" $TMP/userAgent.txt)" | sed 's,/user/,\n/user/,g' | grep '/user/' | grep '/mail/' | cut -d\< -f1 >>tmp.txt
    ) </dev/null &>/dev/null &
    time_exit 17

   done

  fi

  sort -u tmp.txt -o tmp.txt
  cut -d\> -f2 < tmp.txt | sed 's,\ ,_,' >allies.txt
}

clan_allies() {
 clan_id

 if [ -n "$CLD" ]; then
  cd $TMP
  echo "" >callies.txt
  cut -d/ -f3 < tmp.txt >ids.txt
  printf "${BLACK_CYAN}\n$(G_T "Clan allies by Leader, deputy on friends list")\n${COLOR_RESET}\n"
  Lnl=`wc -l < ids.txt`; nl='1'; ts='0'

  for num in `seq "$Lnl" -1 "$nl"`; do
   IDN=`tail -n $Lnl ids.txt | head -n 1`

   if [ -n "$IDN" ]; then
    printf "${Lnl} ${PURPLEis_BLACK}/user/${IDN}${COLOR_RESET}\n"

    (
     w3m -cookie -o http_proxy=$PROXY -o accept_encoding=UTF-8 -debug -dump_source "${URL}/user/${IDN}" -o user_agent="$(sed -n "${random_agent}p" $TMP/userAgent.txt)" >$TMP/SRC
    ) </dev/null &>/dev/null &
    time_exit 17

    LEADPU=`sed 's,/clan/,\n/clan/,g' < $TMP/SRC |  grep -E "</a>, <span class='blue'|</a>, <span class='green'" | cut -d\< -f1 | cut -d\> -f2`
    alCLAN=`grep -E -o '/clan/[0-9]{1,3}' < $TMP/SRC | tail -n1`
    printf "${PURPLEi_BLACK} ${LEADPU} - ${alCLAN}${COLOR_RESET}\n"

    if [ -n "$LEADPU" ]; then
     ts=$((ts + 1))
     echo $LEADPU | sed 's,\ ,_,' >>callies.txt
     printf "${BLACK_CYAN} ${ts}. $(G_T "Ally") ${LEADPU} ${alCLAN} $(G_T "added.")${COLOR_RESET}\n"
     sort -u callies.txt -o callies.txt
    fi

    Lnl=$((Lnl - 1))
   fi

   sleep 1s
  done

 fi

}

