G_T() {
 if [ -z "$LANGUAGE" ]; then
  local LANGUAGE='2'
 fi

 local TRANSLATE=$(echo "$1" | sed 's/\[/\\[/g;s/\]/\\]/g;s/:/\:/g')
 local TEXT=$(echo "$content" | sed -n '/|'"$TRANSLATE"'|/p' | awk -F'|' '{print $'$LANGUAGE'}')

 if [ -z "$TEXT" ]; then
  echo "$1"
 else
  echo "$TEXT"
 fi
}

